# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET           /api-docs/exp                      controllers.ApiHelpController.getResource(path = "/exp")
GET           /exp                               ch.isbsib.proteomics.mzviz.controllers.ExperimentalController.stats
GET           /exp/msrun                         ch.isbsib.proteomics.mzviz.controllers.ExperimentalController.listMSRunIds
POST          /exp/msrun                         ch.isbsib.proteomics.mzviz.controllers.ExperimentalController.loadMSRun
DELETE        /exp/msrun/:runId                  ch.isbsib.proteomics.mzviz.controllers.ExperimentalController.deleteMSRun(runId)
GET           /exp/spectrum/:runId/:title        ch.isbsib.proteomics.mzviz.controllers.ExperimentalController.findExpSpectrum(runId, title)
GET           /exp/ref-spectra/:runId            ch.isbsib.proteomics.mzviz.controllers.ExperimentalController.findAllRefSpectraByRunId(runId)

GET           /api-docs/sequence                 controllers.ApiHelpController.getResource(path = "/sequence")
GET           /sequence/list-sources             ch.isbsib.proteomics.mzviz.controllers.SequenceController.listSources
POST          /sequence/fasta                    ch.isbsib.proteomics.mzviz.controllers.SequenceController.loadFasta

GET           /api-docs/match                    controllers.ApiHelpController.getResource(path = "/match")
POST          /match/psms                        ch.isbsib.proteomics.mzviz.controllers.MatchController.loadPsms
GET           /match/psms-by-runid/:runId        ch.isbsib.proteomics.mzviz.controllers.MatchController.findAllPSMByRunId(runId)
DELETE        /match/:runId                      ch.isbsib.proteomics.mzviz.controllers.MatchController.deleteAllBySource(runId)
GET           /match/searchId                    ch.isbsib.proteomics.mzviz.controllers.MatchController.listSearchIds

GET           /docs/*file                        controllers.Assets.at(path="/public/docs", file)
GET           /api-docs                          controllers.ApiHelpController.getResources